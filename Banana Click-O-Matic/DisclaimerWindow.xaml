<Window x:Class="Banana_Click_O_Matic.DisclaimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disclaimer" Height="300" Width="400">
    <Window.Resources>
        <ResourceDictionary Source="Themes.xaml"/>
    </Window.Resources>
    <Grid Background="{StaticResource PrimaryBrush}">
        <TextBlock TextWrapping="Wrap" Margin="10" TextAlignment="Left" Foreground="{StaticResource TextBrush}">
            <Run Text="Disclaimer:" FontWeight="Bold" FontSize="14"/>
            <LineBreak/>
            <Run Text="This app is made entirely for the game Banana."/>
            <LineBreak/>
            <Run Text="Use at your own risk. The developer is not responsible for any misuse or issues that arise from using this app."/>
            <LineBreak/>
            <Run Text="Note: The game Banana is CPS locked at 20 CPS, so setting CPS above 20 will not be beneficial and may result in your CPS being reduced."/>
        </TextBlock>
    </Grid>
</Window>
